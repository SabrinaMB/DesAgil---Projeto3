<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/menuButton"
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/colorButton"
        android:contentDescription="@string/todo"
        android:background="@drawable/button_background"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_width="90dp"
        android:layout_height="180dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/menuButton"
        android:backgroundTint="@color/colorButton"
        android:contentDescription="@string/todo"
        android:scaleType="fitCenter"
        android:background="@drawable/button_background"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ImageButton
        android:id="@+id/morseButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignTop="@+id/menuButton"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todo"
        android:background="@drawable/button_background"
        app:srcCompat="@color/colorMain" />

    <EditText
        android:id="@+id/contactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Nome do contato"
        android:textColor="@color/colorWelcomeMessage"
        tools:text="@string/nome_do_contato" />

    <EditText
        android:id="@+id/contactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="@string/n_mero_do_contato"
        android:inputType="textPersonName|phone"
        android:text="NÃºmero do contato"
        android:textColor="@color/colorWelcomeMessage"
        tools:text="@string/n_mero_do_contato" />

    <ImageButton
        android:id="@+id/morseInfoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="181dp"
        android:background="@color/colorMain"
        app:srcCompat="@android:drawable/ic_dialog_info" />


</RelativeLayout>