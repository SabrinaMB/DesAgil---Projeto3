<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/addContact"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="152dp"
        android:layout_marginStart="30dp"
        android:adjustViewBounds="false"
        android:background="@color/colorPrimary"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/careAlert"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/addContact"
        android:layout_marginEnd="30dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_dialog_alert"
        android:contentDescription="@string/todo" />

    <ImageButton
        android:id="@+id/sendMessage"
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/addContact"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/ol_fabio_ferr_o_hoje_quarta_feira_que_seu_dia_seja_incr_vel"
        android:textColor="@android:color/darker_gray"
        android:textSize="36sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/careAlertLabel"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:layout_alignStart="@+id/careAlert"
        android:layout_alignTop="@+id/addContactLabel2"
        android:text="@string/avisos_ao_cuidador"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sendMessageLabel2"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:layout_alignTop="@+id/addContactLabel2"
        android:layout_centerHorizontal="true"
        android:text="@string/fale_com_amigos"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addContactLabel2"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/addContact"
        android:layout_marginBottom="85dp"
        android:text="@string/adicione_contatos"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>